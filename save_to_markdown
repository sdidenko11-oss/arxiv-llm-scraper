def save_to_markdown(self, papers, filename='report.md'):
    """
    Ğ¡Ğ¾Ğ·Ğ´Ğ°ĞµÑ‚ ĞºÑ€Ğ°ÑĞ¸Ğ²Ñ‹Ğ¹ Ğ¾Ñ‚Ñ‡ĞµÑ‚ Ğ² Ñ„Ğ¾Ñ€Ğ¼Ğ°Ñ‚Ğµ Markdown Ñ AI summaries.
    """
    if not papers:
        print("ĞĞµÑ‚ Ğ´Ğ°Ğ½Ğ½Ñ‹Ñ… Ğ´Ğ»Ñ ÑĞ¾Ñ…Ñ€Ğ°Ğ½ĞµĞ½Ğ¸Ñ Ğ² Markdown Ğ¾Ñ‚Ñ‡ĞµÑ‚Ğµ.")
        return

    with open(filename, 'w', encoding='utf-8') as f:
        f.write(f"# ğŸ¤– ArXiv AI Research Digest\n\n")
        f.write(f"**Total papers found:** {len(papers)}\n")
        f.write(f"**Generated:** {datetime.now().strftime('%Y-%m-%d %H:%M:%S')}\n")
        f.write(f"**Search query:** LLM + Prompt Engineering + Evaluation\n\n")
        f.write("---\n\n")

        sorted_papers = sorted(papers, key=lambda x: x['published_date'], reverse=True)

        for i, paper in enumerate(sorted_papers, 1):
            f.write(f"## ğŸ“„ {i}. {paper['title']}\n\n")
            
            f.write(f"**ğŸ‘¥ Authors:** {', '.join(paper['authors'][:3])}")  # ĞŸĞµÑ€ÑˆÑ– 3 Ğ°Ğ²Ñ‚Ğ¾Ñ€Ğ¸
            if len(paper['authors']) > 3:
                f.write(f" *et al. ({len(paper['authors'])} total)*")
            f.write("\n\n")
            
            f.write(f"**ğŸ“… Published:** {paper['published_date']}\n")
            f.write(f"**ğŸ·ï¸ Category:** {paper['primary_category']}\n")
            f.write(f"**ğŸ”— PDF:** [{paper['entry_id']}]({paper['pdf_url']})\n\n")
            
            # AI Summary (ÑĞºÑ‰Ğ¾ Ñ”)
            if paper.get('ai_summary'):
                f.write(f"### ğŸ¤– AI Summary\n")
                f.write(f"{paper['ai_summary']}\n\n")
            
            # ĞŸĞ¾Ğ²Ğ½Ğ¸Ğ¹ abstract Ñƒ ÑĞ¿Ğ¾Ğ¹Ğ»ĞµÑ€Ñ– (Ğ¾Ğ¿Ñ†Ñ–Ğ¾Ğ½Ğ°Ğ»ÑŒĞ½Ğ¾)
            f.write(f"<details>\n")
            f.write(f"<summary>ğŸ“– <b>Full Abstract</b> (click to expand)</summary>\n\n")
            summary = paper['summary'].replace('\n', ' ')
            f.write(f"{summary}\n\n")
            f.write(f"</details>\n\n")
            
            f.write("---\n\n")
    
    print(f"ğŸ’¾ ĞÑ‚Ñ‡ĞµÑ‚ Ğ² Ñ„Ğ¾Ñ€Ğ¼Ğ°Ñ‚Ğµ Markdown ÑĞ¾Ñ…Ñ€Ğ°Ğ½ĞµĞ½ Ğ² {filename}")
